<% if signed_in? %>
  I'm logged in as <%= current_user.email %>
  <%= link_to("logout", session_path, :method => :delete) %>
<% else %>
  <ul>
    <% if signed_out? %>
      <li><%= link_to("login", new_session_path) %></li>
      <li><%= link_to("signup", new_user_path) %></li>
    <% end %>
  </ul>
<% end %>

<div>
  locale: <%= I18n.locale %>
  <div id="content">
    original content
  </div>

  <div id="content2">
    original content2: <%= User.all.map(&:email).join(", ") %>
  </div>
</div>

<%= javascript_on_load do %>
  home = new Home("arnau");
  home.run();
<% end %>
